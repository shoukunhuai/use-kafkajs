{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "composite": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
